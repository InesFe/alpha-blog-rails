<div class="container">
    <div class="center">
        <h1>Liste des utilisateurs</h1>
    </div>

    <table class="table table-striped">
        <thead>
            <th scope="col"></th>
            <th scope="col"></th>
        </thead>

        <div class="pagination justify-content-center"><%= will_paginate @users %></div>
        
        <% @users.each do |user| %>
            <tr>
                <td><%= gravatar_for user, size: 30 %>
                <%= link_to user.username, user_path(user) %>
                <% if logged_in? and current_user.admin? %>
                    <%= link_to "Supprimer l'utilisateur", user_path(user), 
                        data: { turbo_method: :delete, turbo_confirm: "Etes-vous sÃ»r de vouloir supprimer ce profil utilisateur et ses articles ?" },
                        class: "btn btn-danger btn-sm" %>
                <% end %></td>
                <td>has published <%= pluralize(user.articles.count, "article") if user.articles.any? %></td>
            </tr>
        <% end %>
    </table>
    
    <div class="pagination justify-content-center">
        <%= will_paginate @users %>
    </div>
</div>