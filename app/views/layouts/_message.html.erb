<% flash.each do |name, msg| %>
    <div class="alert alert-<%= bootstrap_class_for(name) %> alert-dismissible fade show text-center" role="alert" style="width: 66%; margin: 0 auto;">
        <%= msg %>
        <button name="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% end %>